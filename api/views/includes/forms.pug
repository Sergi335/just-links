.container.modals
  p#moveError
  #addDeskForm.deskForm
    h3 A&ntilde;ade Escritorio
    input#deskName(type='text' name='deskName' maxlength='35' required)
    button#deskSubmit(type='submit') Enviar
    p#deskError
  #editDeskForm.deskForm
    h3 Edita Escritorio
    form
      input#editdeskName(type='text' name='deskName' maxlength='35' value= escritorioSelectedFormat required)
      button#editdeskSubmit(type='submit') Modificar
    #selectCols
      label(for='cols') Número de columnas:
      select#colsSelect(name='cols')
        option(value=1) 1
        option(value=2) 2
        option(value=3) 3
        option(value=4 selected) 4
        option(value=5) 5
    h3 Cambiar Fondo 
    .selectBackground
    if backgrounds
      each item in backgrounds 
        img(class='miniatures' src=`${item.url}`, alt=`${item.nombre}`)
      .solidColor.miniatures
    h3 Cambiar color del panel
    .selectInfoColor 
      #theme.infoColors 
      #transparent.infoColors 
      #blur.infoColors 
    h3 Cambiar color de acento
    .selectAccentColor 
      div(id='yellow').accentColors
      div(id='blue').accentColors
      div(id='green').accentColors
      div(id='defaultLight').accentColors
      div(id='defaultDark').accentColors
    p#editdeskError
  #addColForm.deskForm
    h2 A&ntilde;ade Columna
    input#colName(type='text' name='colName' maxlength='35' required)
    button#colSubmit(type='submit') Enviar
    p#addColError
  #addLinkForm.deskForm
    h2 A&ntilde;ade Link
    p Nombre
    input#linkName(type='text' name='linkName' maxlength='35' required)
    p URL
    input#linkURL(type='text' name='linkURL')
    button#linkSubmit(type='submit') Enviar
    p#linkError
  #editLinkForm.deskForm
    h2 Edita Link
    fieldset
      legend Nombre y URL
      label(for='editLinkName') Nombre
      input#editlinkName(type='text' name='editlinkName' placeholder='' maxlength='35' required)
      label(for='editLinkURL') URL
      input#editlinkURL(type='text' name='editlinkURL' placeholder='')
      label(for='editLinkDescription') Description
      input#editlinkDescription(type='text' name='editlinkDescription' placeholder='')
      button#editlinkSubmit(type='submit') Modificar
      p#editLinkError
  #deleteLinkForm.deskForm
    h2 Seguro que quieres borrar este Link?
    button#confDeletelinkSubmit(type='submit') Si
    button#noDeletelinkSubmit(type='submit') No
    p#deleteLinkError
  #deleteLinkImgForm.deskForm
    h2 Seguro que quieres borrar esta imagen?
    .buttons
      button#confDeleteImgSubmit(type='submit') Si
      button#noDeleteImgSubmit(type='submit') No
    p Esta acción no se puede deshacer
    p#deleteImgError
  #deleteColForm.deskForm
    h2 Seguro que quieres borrar esta columna?
    button#confDeletecolSubmit(type='submit') Si
    button#noDeletecolSubmit(type='submit') No
    p#deleteColError
  #deleteDeskForm.deskForm
    h2 Seguro que quieres borrar este escritorio?
    button#confDeletedeskSubmit(type='submit') Si
    button#noDeletedeskSubmit(type='submit') No
    p#deleteDeskError
  #menuColumn.menuColumn
    strong Opciones Columna
    p#elementoC informacion del elemento 
    p#infoC otra informacion
    span.menuItem.addlink
      svg.ui-icon-menu.icofont-plus(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' d='M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z') 
      | Nuevo
    span.menuItem.paste-btn
      svg.ui-icon-menu.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' d='M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184') 
      | Pegar
    span.menuItem.editcol
      svg.ui-icon-menu.icon.icon-tabler.icon-tabler-cursor-text(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' stroke-width='2' stroke='currentColor' fill='none' stroke-linecap='round' stroke-linejoin='round')
        path(stroke='none' d='M0 0h24v24H0z' fill='none')
        path(d='M10 12h4')
        path(d='M9 4a3 3 0 0 1 3 3v10a3 3 0 0 1 -3 3')
        path(d='M15 4a3 3 0 0 0 -3 3v10a3 3 0 0 0 3 3')
      | Renombrar
    span.menuItem.moveCol
      svg.ui-icon-menu.icon.icon-tabler.icon-tabler-folder-bolt(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' stroke-width='2' stroke='currentColor' fill='none' stroke-linecap='round' stroke-linejoin='round')
        path(stroke='none' d='M0 0h24v24H0z' fill='none')
        path(d='M13 19h-8a2 2 0 0 1 -2 -2v-11a2 2 0 0 1 2 -2h4l3 3h7a2 2 0 0 1 2 2v3.5')
        path(d='M19 16l-2 3h4l-2 3') 
      | Mover a
      i.icofont-thin-right
      ul#destDesk
        if deskNames !== undefined
        each val in deskNames
          if val.displayName !== escritorioSelectedFormat
            li(id=`${val.name}`)= val.displayName
    span.menuItem.borracol
      svg.ui-icon-menu.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' d='M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0') 
      | Borrar 
  #menuLink.menuLink
    strong Opciones Enlace
    p#elementoL informacion del elemento 
    p#infoL otra informacion
    p#infoD otra informacion
    span.menuItem.editalink Editar
    span.menuItem.moveLink Mover a
      i.icofont-thin-right
      ul#destCol
        strong#otherDesk Mover a otro escritorio
        if columnas !== undefined
        each val in columnas
          li(id=`${val.name}` data-db=`${val._id}`)= val.name
    span.menuItem.borralink Borrar
  #menuMoveTo(draggable='true')
    ul#destDeskMoveTo
      if deskNames !== undefined
        each val in deskNames
          li.accordion(id=`${val.name}`)
            i.icofont-folder &nbsp;
            | #{val.displayName}
            ul
              each columnasVal in columnasAll
                - if (columnasVal.escritorio === val.name)
                    li(id=`${columnasVal.name}`)= columnasVal.name
    #moveToControls
      button#acceptMove Aceptar 
      button#cancelMove Cancelar
  button#btnSubirArriba
    i.icofont-scroll-up
  #alertCard
    p
  #loadingCard
    .containerBar
      .progress
        .progress-bar
    p