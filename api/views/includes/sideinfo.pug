      - if (columnas)
        - const tamanoSubarray = 4
        - const subarrays = []
        - for (let i = 0; i < columnas.length; i += tamanoSubarray)
          - const subarray = columnas.slice(i, i + tamanoSubarray)
          - subarrays.push(subarray)
        - var contador = {}
        #sectContainer
          each item in subarrays
            .sect
              each it in item
                - var elem = it.name
                if contador.hasOwnProperty(elem)
                  - var numero = contador[elem] + 1
                  - contador[elem] = numero
                  a(id=`Side${escritorioSelected}${it.name}${numero}`)= it.name
                else
                  - contador[elem] = 1
                  a(id=`Side${escritorioSelected}${it.name}`)= it.name
