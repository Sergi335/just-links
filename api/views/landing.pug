      div
        span.bold JUST 
        span.mono Links
    ul#menu 
      li About 
      li License 
      li Sponsor Project
  main
    section#heroSection 
      h1 Welcome to JustLinks 
      p Store all your links with class
      #login
        button#btnStart Get Started
      .logos
        a(href="https://github.com")  
          img(src="/img/Github.svg", alt="github logo")
        a(href="https://twitter.com")
          img(src="/img/Twitter.svg", alt="twitter logo")
        a(href="https://mail.google.com")
          img(src="/img/Gmail.svg", alt="gmail logo")
    section#features_1
      h2 Features 1
    section#features_2
      h2 Features 2
    footer
#loginPage
  #forms
    #loginForm
      form
        input#loginName(type='text' name='nick' placeholder='nombre' required='true')
        input#loginPass(type='password' name='password' placeholder='password' required='true')
        input(type='submit' value='Log In')
      button#googleSignIn
        img(src="/img/Google.svg", alt="google logo")
        | Sign in with Google
      #loginControls
        p Todav&iacute;a no tienes una cuenta? 
        a(href='#') reg&iacute;strate
        p#error
    #registerForm
      form
        input#registerName(type='text' name='name' placeholder='nombre' required='true')
        input#registerEmail(type='email' name='email' placeholder='email' required='true')
        input#registerPass(type='password' name='password' placeholder='password' required='true')
        input(type='submit' value='Register' disabled)
        p Ya tienes una cuenta? 
        a(href='#') Inicia Sesi&oacute;n
    a#backHome(href="/") Volver